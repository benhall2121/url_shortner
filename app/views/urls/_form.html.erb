
<div class="container">
  <h2 class="text-center text-uppercase text-secondary mb-0">Enter a URL to be shortened</h2>
  <hr class="mb-5" style="width:25%;">
  <div class="row">
    <div class="col-lg-8 mx-auto">

      <%= form_with(model: url, local: false) do |form| %>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls mb-0 pb-2">
            <%= form.text_field :long_url, :class => "form-control", :placeholder => "Paste a link to shorten it" %>
          </div>
        </div>

        <div class="notice_wrapper">
          &nbsp;&nbsp;
        </div>

        <div class="form-group">
          <%= form.submit "SHORTEN", :class => "btn btn-secondary btn-xl" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
