<div class="container">
  <h2 class="text-center text-uppercase text-secondary mb-0">URLs</h2>
  <hr class="mb-5" style="width:25%;">
  <div class="row">
    <div class="col-lg-8 mx-auto">

    <table class="shorten_table">
      <thead>
        <tr>
          <th>Long url</th>
          <th>Short link</th>
          <th>Clicks</th>
        </tr>
      </thead>

      <tbody>
        <% @urls.each do |url| %>
          <tr>
            <td><%= link_to url.long_url, url.long_url %></td>
            <td><%= link_to full_short_link(url.short_link), url %></td>
            <td><%= link_to url.clicks.count, url %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

      
    </div>
  </div>
</div>

